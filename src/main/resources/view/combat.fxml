<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.rpgfinal.controller.CombatController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-padding: 20;">

    <Label text="Combat Simulator" layoutX="250" layoutY="10" style="-fx-font-size: 20px;"/>

    <!-- Sélection des combattants -->
    <Label text="Joueur (Vous) :" layoutX="20" layoutY="50"/>
    <ComboBox fx:id="player1Box" layoutX="100" layoutY="45" prefWidth="150"/>

    <Label text="adversaire (IA) :" layoutX="300" layoutY="50"/>
    <ComboBox fx:id="player2Box" layoutX="380" layoutY="45" prefWidth="150"/>

    <!-- Actions du joueur 1 -->
    <Label text="Action :" layoutX="20" layoutY="100"/>
    <Button text="Attaquer" fx:id="attackBtn" layoutX="100" layoutY="95" prefWidth="80"/>
    <Button text="Défense" fx:id="blockBtn" layoutX="190" layoutY="95" prefWidth="80"/>
    <Button text="Pouvoir" fx:id="powerBtn" layoutX="280" layoutY="95" prefWidth="80"/>

    <!-- Log du combat -->
    <TextArea fx:id="combatLog" layoutX="20" layoutY="150" prefWidth="660" prefHeight="300" editable="false"/>

</AnchorPane>
